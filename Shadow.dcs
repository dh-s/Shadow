FUNCTION RealEqual (r1, r2 : real; delta : real) : boolean;
BEGIN
	IF absr(r1-r2) <= delta THEN
		return true;
	END;
	RETURN false;
END RealEqual;

PROCEDURE MyLogStr (str : string);
